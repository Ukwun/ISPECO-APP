{
  "compilerOptions": {
    "target": "ES2019",               
    "module": "commonjs",             
  "outDir": "dist",                 
  "rootDir": ".",                   
    "esModuleInterop": true,          
    "forceConsistentCasingInFileNames": true,
    "strict": true,                   
    "skipLibCheck": true              
  },
  "include": ["index.ts", "types/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
