{
  "compilerOptions": {
    "target": "ES2019",               
    "module": "commonjs",             
    "outDir": "dist",                 
    "rootDir": "server",              
    "esModuleInterop": true,          
    "forceConsistentCasingInFileNames": true,
    "strict": true,                   
    "skipLibCheck": true              
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules"]
}
